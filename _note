#compdef _note note

function _note {
    local line

    _arguments -C \
        "1: :(add del list edit)" \
        "*::arg:->args"

    if [ -z "$line[2]" ]; then
        case $line[1] in
            del)
                _files -W "$HOME/.notes"
                ;;
            edit)
                _files -W "$HOME/.notes"
                ;;
        esac
    fi
} 
